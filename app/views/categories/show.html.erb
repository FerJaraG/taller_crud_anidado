<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @category.name %>
</p>

<%= link_to 'Editar', edit_category_path(@category) %> |
<%= link_to 'Volver', categories_path %>


<br>

<%= form_with(model: [@category, @product], local: true) do |f| %>
	<%= f.label :name, 'Nombre' %>
	<%= f.text_field :name %>
	<%= f.label :price, 'Precio' %>
	<%= f.number_field :price %>
	 <%= f.submit :enviar %>
<% end %>

<br>

<table>
	<tr>
		<th>Nombre</th>
		<th>Precio</th>
	</tr>
		<% @products.each do |product| %>
		<tr>
			<td><%= product.name %> </td>
			<td><%= product.price %> </td>
			<td><%= link_to 'Eliminar', category_product_path(@category,product), method: :delete %></td>
		</tr>
	<% end %>
	

</table>


